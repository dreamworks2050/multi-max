# Multi-Max Environment Configuration
# This file contains configuration settings for the Multi-Max application
# Copy this file to .env to use these settings

# Hardware Acceleration Settings
# Set to false if experiencing issues on Apple Silicon Macs
FORCE_HARDWARE_ACCELERATION=true
ALLOW_SOFTWARE_FALLBACK=false

# Default Video Source
# Uncomment and modify the line below to set a default YouTube URL:
DEFAULT_VIDEO_URL=https://www.youtube.com/watch?v=dQw4w9WgXcQ

# Performance Settings
ENABLE_MEMORY_TRACING=false

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Buffer Settings (frames)
FRAME_BUFFER_SIZE=60 